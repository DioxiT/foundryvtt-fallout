<div class="flexrow resource-row">
	{{#each FALLOUT.ATTRIBUTES as |attribute key|}}
	{{> specialAttribute
			attribute=(lookup ../system.requirements.attributes key)
			key=key
	}}
	{{/each}}
</div>

{{#*inline "specialAttribute"}}
	<div class="box">
		<div class="box-header text-center upperC resource-label">
			{{subString key 0 1}}
		</div>
		<div class="flex-center">
			<input
				class="text-center"
				type="number"
				name="system.requirements.attributes.{{key}}.value"
				value="{{attribute.value}}"
			>
		</div>
	</div>
{{/inline}}
