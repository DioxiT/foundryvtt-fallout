<form class="{{cssClass}} {{actor.type}} flexcol theme-wrapper" autocomplete="off">

	{{!-- Sheet Header --}}
	{{> actor/parts/actor-header }}

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="status">{{localize "FALLOUT.TEMPLATES.Status"}}</a>
		<a class="item" data-tab="skills">{{localize "FALLOUT.TEMPLATES.Abilities"}}</a>
		<a class="item" data-tab="weapons">{{localize "FALLOUT.TEMPLATES.Weapons"}}</a>
		<a class="item" data-tab="apparel">{{localize "FALLOUT.TEMPLATES.Apparel"}}</a>
		<a class="item" data-tab="inventory">{{localize "FALLOUT.TEMPLATES.Gear"}}</a>
		<a class="item" data-tab="data">{{localize "FALLOUT.TEMPLATES.Data"}}</a>
		<a class="item" data-tab="effects">{{localize "FALLOUT.TEMPLATES.Effects"}}</a>
	</nav>

	<section class="sheet-body">

		{{!-- Status Tab --}}
		<div class="tab status" data-group="primary" data-tab="status">
			{{> actor/parts/actor-status }}
		</div>

		{{!-- Owned skills Tab --}}
		<div class="tab skills" data-group="primary" data-tab="skills">
			<section class="grid grid-6col">
				<div class="attributes main grid-span-1">
					{{> actor/parts/actor-attributes }}
				</div>
				<section class="main grid-span-2">
					{{> actor/parts/actor-skills }}
				</section>
				<section class="main grid-span-3">
					{{> actor/parts/actor-traits }}
					{{> actor/parts/actor-perks }}
				</section>
			</section>
		</div>

		{{!-- Owned Apparel Tab --}}
		<div class="tab items" data-group="primary" data-tab="apparel">
			{{> actor/parts/actor-apparel }}
		</div>

		{{!-- Owned Weapons Tab --}}
		<div class="tab items" data-group="primary" data-tab="weapons">
			{{> actor/parts/actor-weapons }}
		</div>

		{{!-- Inventory Tab --}}
		<div class="tab inventory" data-group="primary" data-tab="inventory">
			{{> actor/parts/actor-inventory }}
		</div>

		{{!-- Biography Tab --}}
		<div class="tab data" data-group="primary" data-tab="data">
			{{!--
				If you want TinyMCE editors to output inline rolls when
				rendered, you need to pass the actor's roll data to the
				rollData property.
			--}}
			{{editor biographyHTML
				target="system.biography"
				rollData=rollData
				button=true
				owner=owner
				editable=editable
			}}
		</div>

		{{!-- Active Effects Tab --}}
		<div class="tab effects flexcol" data-group="primary" data-tab="effects">
			{{> actor/parts/actor-effects }}
		</div>

	</section>
</form>
