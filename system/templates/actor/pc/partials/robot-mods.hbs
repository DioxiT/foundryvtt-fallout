<div class="box">
	<div class="box-header">
		<h4
			class="tab-switch upperC"
			data-tab="inventory"
		>
			{{localize "FALLOUT.TEMPLATES.MODULES"}}
		</h4>
	</div>
	<div>
		<ol class="items-list">
			{{#each system.equippedRobotMods as |item key|}}
				<li class="item">
					<h4 style="margin: 0 -4px; padding: 2px; background-color: #00000040;">
						{{item.name}}
					</h4>
					<span class="font-size-11">
						{{{lookup ../itemsEnrichedDescriptions item._id }}}
					</span>
				</li>
			{{/each}}
		</ol>
	</div>
</div>
