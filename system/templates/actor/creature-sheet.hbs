<form class="{{cssClass}} {{actor.type}} flexcol theme-wrapper" autocomplete="off">

    {{!-- Sheet Header --}}
    {{> actor/parts/actor-header }}

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="skills">{{localize "FALLOUT.TEMPLATES.Abilities"}}</a>
        <a class="item" data-tab="data">{{localize "FALLOUT.TEMPLATES.Data"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Attributes Tab --}}
        <div class="tab skills" data-group="primary" data-tab="skills">
            <section class="grid grid-2col">
                {{!-- LEFT COLUMN __________________________________________________ --}}
                <div class="left-column">
                    <div class="flexrow resource-row">
                        <div class="box no-padding bgOdd">
                            <h3 class="box-header text-center">{{localize "FALLOUT.CREATURE.body"}}</h3>
                            <div class="text-center">
                                <input class="num-short-2" type="number" name="system.body.value" value="{{system.body.value}}">
                            </div>
                        </div>
                        <div class="box no-padding bgEven" style="margin-right: 5px;">
                            <h3 class="box-header text-center">{{localize "FALLOUT.CREATURE.mind"}}</h3>
                            <div class="text-center">
                                <input class="num-short-2" type="number" name="system.mind.value" value="{{system.mind.value}}">
                            </div>
                        </div>

                        <div class="box no-padding bgOdd">
                            <h3 class="box-header text-center">{{localize "FALLOUT.CREATURE.melee"}}</h3>
                            <div class="text-center">
                                <input class="num-short-2" type="number" name="system.melee.value" value="{{system.melee.value}}">
                            </div>
                        </div>
                        <div class="box no-padding bgEven">
                            <h3 class="box-header text-center">{{localize "FALLOUT.CREATURE.guns"}}</h3>
                            <div class="text-center">
                                <input class="num-short-2" type="number" name="system.guns.value" value="{{system.guns.value}}">
                            </div>
                        </div>
                        <div class="box no-padding bgOdd">
                            <h3 class="box-header text-center">{{localize "FALLOUT.CREATURE.other"}}</h3>
                            <div class="text-center">
                                <input class="num-short-2" type="number" name="system.other.value" value="{{system.other.value}}">
                            </div>
                        </div>
                    </div>
                    <div class="flexrow resource-row">
                        <div class="box no-padding bgEven">
                            <h4 class="box-header text-center">HP</h4>
                            <div class="flexrow">
                                <input class="num-short-3" type="number" name="system.health.value" value="{{system.health.value}}">
                                <label class="text-center"> / </label>
                                <input class="num-short-3" type="number" name="system.health.max" value="{{system.health.max}}">
                            </div>
                        </div>
                        <div class="box no-padding bgOdd">
                            <h4 class="box-header text-center">{{localize "FALLOUT.TEMPLATES.INITIATIVE"}}</h4>
                            <div class="text-center">
                                <input class="num-short-2" type="number" name="system.initiative.value" value="{{system.initiative.value}}">
                            </div>
                        </div>
                        <div class="box no-padding bgEven">
                            <h4 class="box-header text-center">{{localize "FALLOUT.TEMPLATES.DEFENSE"}}</h4>
                            <div class="text-center">
                                <input class="num-short-2" type="number" name="system.defense.value" value="{{system.defense.value}}">
                            </div>
                        </div>
                    </div>

                    {{!-- BODY STATUS --}}
                    {{> actor/parts/npc-body FALLOUT=FALLOUT }}
                    {{!-- END BODY STATUS --}}

                </div>
                {{!-- RIGHT COLUMN __________________________________________________ --}}
                <div>
                    <div class="box no-padding bgOdd">
                        <h4 class="box-header text-center">{{localize "FALLOUT.TEMPLATES.ATTACKS"}}</h4>
                        <div>
                            {{!-- Owned Weapons Tab --}}
                            {{> actor/parts/actor-weapons }}
                        </div>
                    </div>

                    <div class="resource-row">
                        {{!-- Owned Abilities Tab --}}
                        {{> actor/parts/actor-special_abilities }}
                    </div>

                    <div class="resource-row">
                        <ol class="items-list">
                            <li class="item consumable flexrow items-header">
                                <div class="flexrow flexlarge item-name upperC">{{localize 'FALLOUT.UI.INVENTORY'}}</div>
                                <div class="item-controls">
                                    <a class="item-control item-create" title="Create Miscellany" data-type="miscellany"><i class="fas fa-plus"></i>
                                        {{localize 'FALLOUT.UI.Add'}}</a>
                                </div>
                            </li>
                            {{#each inventory as |item id|}}
                          	  {{> actor/parts/simple-expandable-item item=item }}
                            {{/each}}
                        </ol>
						<div class="box no-padding" style="margin-top: 5px; margin-bottom: 0px;">
							<div class="flexrow align-mid">
								<div style="text-align: right;">
									<label>
										{{localize "FALLOUT.TEMPLATES.Total"}}:
										{{system.carryWeight.total}} /
										<input
											type="number"
											name="system.carryWeight.base"
											class="num-short-2"
											value="{{system.carryWeight.base}}"
										>
										{{localize "FALLOUT.TEMPLATES.lbs"}}
									</label>
								</div>
							</div>
						</div>
                    </div>
                </div>
            </section>
        </div>

        {{!-- Biography Tab --}}
        <div class="tab biography" data-group="primary" data-tab="data">
            {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll
            data to the rollData property. --}}
            {{editor biographyHTML target="system.biography" rollData=rollData button=true owner=owner
            editable=editable}}
        </div>

    </section>
</form>
