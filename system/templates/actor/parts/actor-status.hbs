<div class="condition-box flexrow">
    {{!-- LEFT COLUMN --}}
    <div style="padding-right:10px;">
        <div class="box">
            <div class="box-header">
                <h4>{{localize "FALLOUT.TEMPLATES.DERIVED"}}</h4>
            </div>
            <div class="flexrow resource-row align-mid">
                <label class="resource-label">
					{{localize "FALLOUT.TEMPLATES.MELEE_DAMAGE"}}
				</label>
                <input
					class="num-short-2"
					type="number"
					name="system.meleeDamage.value"
					value="{{system.meleeDamage.value}}"
					disabled
				>
            </div>
            <div class="flexrow resource-row align-mid">
                <label class="resource-label">
					{{localize "FALLOUT.TEMPLATES.DEFENSE"}}
				</label>
                <input
					class="num-short-2"
					type="number"
					name="system.defense.value"
					value="{{system.defense.value}}"
					disabled
				>
            </div>
            <div class="flexrow resource-row align-mid">
                <label class="resource-label">
					{{localize "FALLOUT.TEMPLATES.INITIATIVE"}}
				</label>
                <input
					class="num-short-2"
					type="number"
					name="system.initiative.value"
					value="{{system.initiative.value}}"
					disabled
				>
            </div>
        </div>

        <div class="box">
            <div class="box-header">
                <h4>{{localize "FALLOUT.TEMPLATES.RESISTANCE_BONUSES"}}</h4>
            </div>
            <div class="flexcol">
                <div class="flexrow resource-row">
                    <span>
                        <i class="fo-physical"></i>
						&nbsp;
                        <label for="system.resistance.physical" class="resource-label">
							{{localize "FALLOUT.TEMPLATES.PHYS"}}
						</label>
                    </span>
                    <input
						class="num-short-2"
						name="system.resistance.physical"
						type="number"
                        value="{{system.resistance.physical}}"
					>
                </div>
                <div class="flexrow resource-row">
                    <span>
						<i class="fo-energy"></i>
						&nbsp;
						<label for="system.resistance.energy" class="resource-label">
							{{localize "FALLOUT.TEMPLATES.ENG"}}
						</label>
					</span>
                    <input
						class="num-short-2"
						name="system.resistance.energy"
						type="number"
                        value="{{system.resistance.energy}}"
					>
                </div>
                <div class="flexrow resource-row">
                    <span>
                        <i class="fo-radiation"></i>
						&nbsp;
                        <label for="system.resistance.radiation" class="resource-label">
							{{localize "FALLOUT.TEMPLATES.RAD"}}
						</label>
                    </span>
                    <input
						class="num-short-2"
						name="system.resistance.radiation"
						type="number"
                        value="{{system.resistance.radiation}}"
					>
                </div>
                <div class="flexrow resource-row">
                    <span>
                        <i class="fo-poison"></i>
						&nbsp;
                        <label for="system.resistance.poison" class="resource-label">
							{{localize "FALLOUT.TEMPLATES.POISON"}}
						</label>
                    </span>
                    <input
						class="num-short-2"
						name="system.resistance.poison"
						type="number"
                        value="{{system.resistance.poison}}"
					>
                </div>
            </div>
        </div>

		{{#ifCond actor.type '!==' 'robot'}}
			<div class="box">
				<div class="box-header">
					<h4 class="upperC">{{localize "FALLOUT.TEMPLATES.Status"}}</h4>
				</div>
				<div class="flexrow resource-row align-mid">
					<label class="resource-label upperC">
						{{localize "FALLOUT.TEMPLATES.conditions.fatigue"}}
					</label>
					<input
						class="num-short-2"
						type="number"
						name="system.conditions.fatigue"
						value="{{system.conditions.fatigue}}"
					>
				</div>
				<div class="flexrow resource-row align-mid">
					<label
						class="resource-label upperC"
						title="{{localize 'FALLOUT.TEMPLATES.conditions.intoxication.tooltip'}}"
					>
						{{localize "FALLOUT.TEMPLATES.conditions.intoxication.label"}}
					</label>
					<input
						class="num-short-2"
						type="number"
						name="system.conditions.intoxication"
						value="{{system.conditions.intoxication}}"
					>
				</div>
				<div class="flexrow resource-row align-mid">
					<label class="resource-label upperC">
						{{localize "FALLOUT.TEMPLATES.Alcoholic"}}
					</label>
					<input
						name="system.conditions.alcoholic"
						type="checkbox"
						{{#if system.conditions.alcoholic}}
							checked
						{{/if}}
					>
				</div>
			</div>
		{{/ifCond}}
    </div>

    {{!-- MIDDLE COLUMN --}}
    <div>
        {{!-- PIP BOY HELP --}}
        <div class="status-help-bar">
            <div class="help-item">
                <span class="symbol healthy"></span>
                <p>{{localize "FALLOUT.TEMPLATES.Healthy"}}</p>
            </div>
            <div class="help-item">
                <span class="symbol wounded"></span>
                <p>{{localize "FALLOUT.TEMPLATES.Treated_injury_Right_Click"}}</p>
            </div>
            <div class="help-item">
                <span class="symbol crippled"></span>
                <p>{{localize "FALLOUT.TEMPLATES.Injury_Left_Click"}}</p>
            </div>
        </div>
        {{!-- PIP BOY --}}
        <div class="pipboy-status-screen {{actor.type}}">
            <div class="body-part head {{system.body_parts.head.status}}"></div>
            <div class="body-part torso {{system.body_parts.torso.status}}"></div>
            <div class="body-part armL {{system.body_parts.armL.status}}"></div>
            <div class="body-part armR {{system.body_parts.armR.status}}"></div>
            <div class="body-part legL {{system.body_parts.legL.status}}"></div>
            <div class="body-part legR {{system.body_parts.legR.status}}"></div>
            {{> actor/parts/body-status-plaque
				bodypart=system.body_parts.head
				keypart="head"
				apparel=system.outfittedLocations.head.name
			}}
            {{> actor/parts/body-status-plaque
				bodypart=system.body_parts.torso
				keypart="torso"
				apparel=system.outfittedLocations.torso.name
			}}
            {{> actor/parts/body-status-plaque
				bodypart=system.body_parts.armL
				keypart="armL"
				apparel=system.outfittedLocations.armL.name
			}}
            {{> actor/parts/body-status-plaque
				bodypart=system.body_parts.armR
				keypart="armR"
				apparel=system.outfittedLocations.armR.name
			}}
            {{> actor/parts/body-status-plaque
				bodypart=system.body_parts.legL
				keypart="legL"
				apparel=system.outfittedLocations.legL.name
			}}
            {{> actor/parts/body-status-plaque
				bodypart=system.body_parts.legR
				keypart="legR"
				apparel=system.outfittedLocations.legR.name
			}}
        </div>

    </div>

    {{!-- RIGHT COLUMN --}}
    <div style="padding-left:10px;">
        <div
			class="resource-plate-header plate-31-o" style="padding-right: 5px;"
		>
            <div class="label">
                <h3 style="margin:0; border-bottom: none;">
					<strong>{{localize "FALLOUT.HEALTH.health"}}</strong>
				</h3>
            </div>
            <div
				class="flexrow align-mid"
				style="margin-right: 8px; margin-left: 8px; margin-bottom: 4px;"
			>
                <input
					class="num-short-3"
					style="font-size:18px; background-color: beige; color: black;"
					type="number"
                    name="system.health.value"
					value="{{system.health.value}}"
					min="0"
				>
                <span class="text-center">/</span>
                <input
					class="num-short-3"
					style="font-size:18px; background-color: beige; color: black;"
					type="number"
                    name="system.health.max"
					value="{{system.health.max}}"
					min="0" disabled
				>
            </div>
        </div>

        {{#ifCond actor.type '===' 'character'}}
			<div
				class="resource-plate-header plate-3-g"
				style="margin-bottom: 10px;"
			>
				<div class="flex align-mid">
					<i class="fo-radiation" style="margin-right: 3px;"></i>
					<h4 style="margin:0 5px 0 0">
						<strong>{{localize "FALLOUT.TEMPLATES.RADIATION"}}</strong>
					</h4>
					<input
						class="num-short-2"
						style="font-size:12px; background-color: beige; color: black;"
						type="number"
						name="system.radiation"
						value="{{system.radiation}}"
						min="0"
					>
				</div>
			</div>
        {{/ifCond}}

        <div class="resource-plate-header plate-3-r" style="margin-bottom: 10px;">
            <div class="flexrow align-mid">
                <div class="symbol crippled"></div>
                <h4 style="margin:0">
					<strong>
						{{localize "FALLOUT.TEMPLATES.INJURIES"}}: {{openInjuriesCount}}
					</strong>
                </h4>
            </div>
        </div>

        {{#ifCond actor.type '===' 'character'}}
        <div class="box" style="width: 139px; margin-left: 19px;">
            <div class="box-header">
                <h4 class="tab-switch" data-tab="apparel">{{localize "FALLOUT.TEMPLATES.POWER_ARMOR_HEALTH"}}</h4>
            </div>
            <div class="power-armor-status">
				{{#each system.outfittedLocations as |loc key|}}
					{{> powerArmorHealth
						location=(lookup ../system.outfittedLocations key)
						key=key
					}}
				{{/each}}

				{{#*inline "powerArmorHealth"}}
					<div class="body-part {{key}}">
						<label>
							{{#ifCond location.system.appareltype '===' 'powerArmor'}}
								{{location.system.health.max}}
							{{/ifCond}}
						</label>
						<input
							class="num-short-2 power-armor-monitor-health-value"
							data-body-location="{{key}}"
							data-item-id="{{location._id}}"
							min="0"
							type="number"
							{{#ifCond location.system.appareltype '===' 'powerArmor'}}
								value="{{location.system.health.value}}"
							{{else}}
								value=""
							{{/ifCond}}
						>
					</div>
				{{/inline}}

            </div>
        </div>
        {{/ifCond}}

        {{#ifCond actor.type '===' 'robot'}}
			<div class="box">
				<div class="box-header">
					<h4
						class="tab-switch"
						data-tab="inventory"
					>
						{{localize "FALLOUT.TEMPLATES.MODULES"}}
					</h4>
				</div>
				<div>
					<ol class="items-list">
						{{#each system.equippedRobotMods as |item key|}}
							<li class="item">
								<h4 style="margin: 0 -4px; padding: 2px; background-color: #00000040;">
									{{item.name}}
								</h4>
								<span class="font-size-11">
									{{{lookup ../itemsEnrichedDescriptions item._id }}}
								</span>
							</li>
						{{/each}}
					</ol>
				</div>
			</div>
        {{/ifCond}}

    </div>
</div>

{{!-- ENCUMBRANCE --}}
<div class="box no-padding" style="margin-top: 5px; margin-bottom: 0px;">
    <div class="flexrow align-mid">
        <div class="flex-center">
            <label>
				{{system.carryWeight.base}}
				{{localize "FALLOUT.TEMPLATES.lbs"}}
				+
			</label>
            <input
				type="number"
				name="system.carryWeight.mod"
				class="num-short-2"
				value="{{system.carryWeight.mod}}"
			>
            <label>
				=
				{{localize "FALLOUT.TEMPLATES.MAX"}}:
				{{system.carryWeight.value}}
				{{localize "FALLOUT.TEMPLATES.lbs"}}
			</label>
        </div>
        <div class="text-center">
            <label>{{localize "FALLOUT.TEMPLATES.Encumbrance_Level"}}: {{system.encumbranceLevel}}</label>
        </div>
        <div style="text-align: right;">
            <label>
				{{localize "FALLOUT.TEMPLATES.Total"}}:
				{{system.carryWeight.total}} / {{system.carryWeight.value}}
				{{localize "FALLOUT.TEMPLATES.lbs"}}
			</label>
        </div>
    </div>
</div>

{{!-- FAVOURITE ROW // EQUIPPED --}}
<div class="status footer grid grid-5col">
    <div class="grid-span-2">
        {{> actor/parts/actor-favorite_weapons}}
    </div>
    <div class="grid-span-2">
		{{#ifCond actor.type '!==' 'robot'}}
			{{> actor/parts/actor-addictions}}
			{{> actor/parts/actor-diseases}}
		{{/ifCond}}
    </div>
    <div>
		{{#ifCond actor.type '!==' 'robot'}}
			{{> actor/parts/actor-conditions}}
		{{/ifCond}}
    </div>
</div>
