<div class="resource-row">
	<ol class="items-list">
		<li class="item consumable flexrow items-header">
			<div class="flexrow flexlarge item-name upperC">
				{{localize 'FALLOUT.UI.SPECIAL_ABILITY'}}
			</div>
			<div class="item-controls">
				<a
					class="item-control item-create"
					data-type="special_ability"
					title="{{localize 'FALLOUT.TEMPLATES.Create_Special_Ability'}}"
				>
					<i class="fas fa-plus"></i>
					{{localize 'FALLOUT.UI.Add'}}</a>
			</div>
		</li>
		{{#each itemsByType.special_ability}}
			{{> actor/parts/simple-expandable-item
				item=this
				basicControlsOnly=true
			}}
		{{/each}}
	</ol>
</div>
